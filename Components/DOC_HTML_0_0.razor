<section class="section intro @Objref.GetItemValue(7)" id="@("C" + Objref.Id)">
	<div class="row">
		<div class="col-6 md:col-12">
			@if (!string.IsNullOrEmpty(Objref.GetFileItemValue("txt4")))
			{
				<div class="intro__img cover gs_reveal gs_reveal_fromLeft">
					<IMG_SRC Picture="@Objref.GetFileItemValue("txt4")" Alt="@Objref.GetItemValue(2)" />
				</div>
			}
		</div>


		<div class="col-6 md:col-12 intro__content">
			<div class="intro__content__top">
				@if (!string.IsNullOrEmpty(@Objref.GetItemValue(1)))
				{
					<h1>@Objref.GetItemValueWithHTML(1)</h1>
				}
				@if (!string.IsNullOrEmpty(Objref.GetItemValue(2)))
				{
					<div class="intro__perex gs_reveal gs_reveal_fromRight">@Objref.GetItemValueWithHTML(2)</div>
				}
				@if (!string.IsNullOrEmpty(Objref.GetItemValue(3)) && !string.IsNullOrEmpty(Objref.GetItemValue(8)))
				{
					<a href="@Objref.GetItemValue(3)" class="button button--outline gs_reveal gs_reveal_fromRight">
						@Objref.GetItemValueWithHTML(8)
					</a>
				}
			</div>
			<div class="intro__content__bottom">
				@if (!string.IsNullOrEmpty(Objref.GetItemValue(2)))
				{
					<div class="intro__content__bottom__perex gs_reveal gs_reveal_fromRight">@Objref.GetItemValueWithHTML(6)</div>
				}
				@if (!string.IsNullOrEmpty(Objref.GetFileItemValue("txt5")))
				{
					<div class="intro__content__img cover gs_reveal gs_reveal_fromRight">
						<IMG_SRC Picture="@Objref.GetFileItemValue("txt5")" Alt="@Objref.GetItemValue(2)" />
					</div>
				}
			</div>
		</div>
	</div>
</section>

@code {
	[Parameter]
	public webManagerCMS.Core.PageContentNS.Plugins.DocHtml? Objref { get; set; }
}
