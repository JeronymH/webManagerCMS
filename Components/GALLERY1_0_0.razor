

@if (Objref.CountRow == 1)
{
	<GALLERY1_0_1 Objref="Objref" />
} else
{
	<section class="section nav-tiles-pharmacies-wrapper">
		<div class="container">
			<div class="nav-tiles-pharmacies">
				<div class="row g-sm">
					@foreach (var item in Objref.GetGalleryRows(100))
					{
						<div class="col-3 md:col-6">
							<a href="@Objref.GetRowURL(item)">
								<h1>@item.Title</h1>
								<h2>@item.Subtitle</h2>
								<h3>@item.Description</h3>
								<h4>@((MarkupString)item.Note)</h4>
							</a>
						</div>
					}
				</div>
			</div>
		</div>
	</section>

}

@code {
	[Parameter]
	public webManagerCMS.Core.PageContentNS.Plugins.Gallery? Objref { get; set; }
}
