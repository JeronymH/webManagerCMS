<section class="section intro" id="@("C" + Objref.Id)">
	<div class="row">
		@if (!string.IsNullOrEmpty(@Objref.GetItemValue(10)))
		{
			<div class="col-6 md:col-12">
				<div class="contact__map-wrapper gs_reveal gs_reveal_fromLeft">
					<div class="contact__map">
						<div class="map gMap" style="width:100%;height:100%;"></div>
						<div class="map-loc" style="display: none">@Objref.GetItemValue(10)</div>
					</div>
				</div>
			</div>
		}

		<div class="col-6 md:col-12 intro__content">
			<div class="intro__content__top">
				@if (!string.IsNullOrEmpty(@Objref.GetItemValue(1)))
				{
					<h1 class="intro__title gs_reveal gs_reveal_fromRight">@Objref.GetItemValueWithHTML(1)</h1>
				}
				@if (!string.IsNullOrEmpty(@Objref.GetItemValue(8)) || !string.IsNullOrEmpty(@Objref.GetItemValue(9)))
				{
					<table class="intro__table gs_reveal gs_reveal_fromRight">
						@if (!string.IsNullOrEmpty(@Objref.GetItemValue(8)))
						{
							<tr>
								<td>@Objref.GetLocalizedText("PhNo")</td>
								<td><a href="tel:@Objref.GetItemValue(8).Replace(" ", "")">@Objref.GetItemValue(8)</a></td>
							</tr>
						}
						@if (!string.IsNullOrEmpty(@Objref.GetItemValue(9)))
						{
							<tr>
								<td>@Objref.GetLocalizedText("Email")</td>
								<td class="mail"><a href="mailto:@Objref.GetItemValue(9)">@Objref.GetItemValue(9)</a></td>
							</tr>
						}
					</table>
				}

				@if (!string.IsNullOrEmpty(@Objref.GetItemValue(11)))
				{
					<div class="intro__address gs_reveal gs_reveal_fromRight"><p>@Objref.GetItemValueWithHTML(11)</p></div>
				}
				@if (!string.IsNullOrEmpty(@Objref.GetItemValue(12)))
				{
					<div class="intro__address --ic gs_reveal gs_reveal_fromRight">
						<p>@Objref.GetLocalizedText("RegNo")</p>
						<p>@Objref.GetItemValueWithHTML(12)</p>
					</div>
				}
			</div>
		</div>
	</div>
</section>

@code {
	[Parameter]
	public webManagerCMS.Core.PageContentNS.Plugins.DocHtml? Objref { get; set; }
}
