@inject webManagerCMS.Data.Interfaces.IPageContentPluginParameters PluginParameters


<!DOCTYPE html>
<html lang="@GetHMTLTagLang(PluginParameters.TenantAccess.Language)">

<head>
	<meta charset="utf-8" />
	<!--[if IE]><meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" /><![endif]-->
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<meta name="HandheldFriendly" content="true" />
	@if (!string.IsNullOrEmpty(PluginParameters.CurrentPage.SEOKeywords))
	{
		<meta name="keywords" content="PluginParameters.CurrentPage.SEOKeywords" />
	}
	@if (!string.IsNullOrEmpty(PluginParameters.CurrentPage.SEODescription))
	{
		<meta name="description" content="@PluginParameters.CurrentPage.SEODescription" />
	}
	@if (PluginParameters.CurrentPage.TemplateNum != PageContent.ErrorTemplateNum)
	{
		<title>@PluginParameters.CurrentPage.SEOTitle</title>
	}
	else
	{
		<title>404</title>
	}
	<meta name="robots" content="index,follow" />
	<meta name="googlebot" content="index,follow,snippet,archive" />

	<link href="/public/css/style.css?ver=1.0.0" rel="stylesheet" type="text/css" />
	<style>
		.gs_reveal {
			opacity: 0;
			visibility: hidden;
			will-change: transform,opacity
		}</style>
	<noscript>
		<style>
			.gs_reveal {
				opacity: 1;
				visibility: visible
			}</style>
	</noscript>
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&display=swap" rel="stylesheet">
</head>

<body>
	@ChildContent

	<script src="/public/js/libs/jquery.min.js?ver=3.5.1" type="text/javascript"></script>
	<script src="/public/js/scripts.js?ver=1.0.0" type="text/javascript"></script>
	<script src="/public/js/custom.js?ver=1.0.0" type="text/javascript"></script>
	<script src="/public/js/fanapp.js?ver=1.0.0" type="text/javascript"></script>
</body>

</html>



@code {
	[Parameter]
	public RenderFragment? ChildContent { get; set; }

	public string GetHMTLTagLang(webManagerCMS.Data.Models.SystemLanguageType language)
	{
		switch (language)
		{
			case webManagerCMS.Data.Models.SystemLanguageType.Czech:
				return "cs";
			case webManagerCMS.Data.Models.SystemLanguageType.English:
				return "en";
		}
		return "cs";
	}
}
